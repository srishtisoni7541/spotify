<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>User Profile - Music App</title>
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow-md p-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Music App</h1>
        <div class="flex items-center space-x-4">
            <a href="/home" class="text-gray-700">Home</a>
            <a href="/logout" class="text-sm text-white bg-blue-500 px-4 py-2 rounded">Logout</a>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container mx-auto p-4">

        <!-- Profile Picture Section -->
        <div class="bg-white p-6 rounded shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Profile</h2>
            <div class="flex items-center">
                <img id="profile-pic" src="/uploads/<%= user.profileImage %>" alt="Profile Picture" class="rounded-full w-24 h-24 mr-4">
                <div>
                    <form action="/upload-profile-pic" method="POST" enctype="multipart/form-data">
                        <input type="file" name="profilePic" class="mb-2">
                        <button type="submit" class="text-sm text-white bg-green-500 px-4 py-2 rounded">Upload Picture</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Add Music to Playlist Section -->
        <div class="bg-white p-6 rounded shadow-md mb-6">
            <h2 class="text-lg font-semibold mb-4">Add Music to Your Playlist</h2>
            <form action="/add-to-playlist" method="POST">
                <input type="text" name="searchMusic" placeholder="Search for music..." class="w-full p-2 border rounded shadow-sm mb-4">
                <button type="submit" class="text-sm text-white bg-blue-500 px-4 py-2 rounded">Search & Add</button>
            </form>
        </div>

        <!-- User Playlist Section -->
        <div class="bg-white p-6 rounded shadow-md">
            <h2 class="text-lg font-semibold mb-4">Your Playlist</h2>
            <ul>
                <!-- Example of a song in the playlist -->
                <li class="flex justify-between items-center mb-2">
                    <span>Song Title 1</span>
                    <div class="flex items-center space-x-2">
                        <button class="text-sm text-white bg-green-500 px-4 py-1 rounded">Download</button>
                        <button class="text-sm text-white bg-red-500 px-4 py-1 rounded">Remove</button>
                    </div>
                </li>
                <li class="flex justify-between items-center mb-2">
                    <span>Song Title 2</span>
                    <div class="flex items-center space-x-2">
                        <button class="text-sm text-white bg-green-500 px-4 py-1 rounded">Download</button>
                        <button class="text-sm text-white bg-red-500 px-4 py-1 rounded">Remove</button>
                    </div>
                </li>
                <!-- Add more songs as needed -->
            </ul>
        </div>

    </div>

</body>
</html>
