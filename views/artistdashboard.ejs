<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Artist Dashboard</title>
</head>
<body class="bg-gray-100">

  <!-- Navbar -->
  <nav class="bg-white shadow-md p-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">Music App - Artist Dashboard</h1>
    <div>
      <button class="text-sm text-white bg-blue-500 px-4 py-2 rounded">Logout</button>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container mx-auto p-4">

    <!-- Profile Section -->
    <div class="flex items-center space-x-4 p-4 bg-white shadow-md rounded-lg">
      <img src="https://via.placeholder.com/100" alt="Artist Profile Picture" class="rounded-full w-24 h-24">
      <div>
        <h2 class="text-xl font-semibold">Artist Name</h2>
        <p class="text-gray-600">Welcome back! Manage your music and connect with fans.</p>
        <button class="mt-2 text-sm text-white bg-blue-500 px-4 py-2 rounded">Change Profile Picture</button>
      </div>
    </div>

    <!-- Upload Section -->
    <div class="mt-6 p-4 bg-white shadow-md rounded-lg">
      <h3 class="text-lg font-semibold mb-2">Upload New Music or Album</h3>
      <form class="space-y-4" action="/music/upload" method="post">
        <input type="text" name="title"  class="w-full p-2 border rounded" placeholder="Music/Album Title" required>

        <input type="text"  class="w-full p-2 border rounded" name="artist" placeholder="artist name" required>
        <input type="file"  class="block w-full text-sm text-gray-500
          file:mr-4 file:py-2 file:px-4
          file:rounded file:border-0
          file:text-sm file:font-semibold
          file:bg-blue-500 file:text-white
          hover:file:bg-blue-600">
        <button class="w-full text-white bg-green-500 px-4 py-2 rounded">Upload</button>
      </form>
    </div>

    <!-- Stats Section -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">

      <!-- Music Analytics -->
      <div class="p-4 bg-white shadow-md rounded-lg">
        <h3 class="text-lg font-semibold mb-2">Music Analytics</h3>
        <ul>
          <li>Plays: <span class="font-bold">1,234</span></li>
          <li>Likes: <span class="font-bold">567</span></li>
          <li>Shares: <span class="font-bold">89</span></li>
        </ul>
      </div>

      <!-- Manage Existing Music -->
      <div class="p-4 bg-white shadow-md rounded-lg">
        <h3 class="text-lg font-semibold mb-2">Manage Your Music</h3>
        <ul>
          <li class="flex justify-between items-center">
            <span>Track Title 1</span>
            <button class="text-red-500">Delete</button>
          </li>
          <li class="flex justify-between items-center">
            <span>Track Title 2</span>
            <button class="text-red-500">Delete</button>
          </li>
          <!-- Add more tracks as needed -->
        </ul>
      </div>

      <!-- Fan Interactions -->
      <div class="p-4 bg-white shadow-md rounded-lg">
        <h3 class="text-lg font-semibold mb-2">Fan Interactions</h3>
        <p>You have <span class="font-bold">15 new messages</span> from fans!</p>
        <button class="text-white bg-blue-500 px-4 py-2 mt-2 rounded">View Messages</button>
      </div>

    </div>

  </div>

</body>
</html>
